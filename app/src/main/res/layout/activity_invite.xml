<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Invite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite your friends and family to join Driverlly"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:backgroundTint="#070707"
            android:id="@+id/ADd_from_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add from contacts"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

        <Button
            android:backgroundTint="#070707"
            android:id="@+id/Enter_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Email"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

        <Button
            android:backgroundTint="#070707"
            android:id="@+id/share_invite_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="share invite link"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>